<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/layout">
  <ImageView
    android:id="@+id/speaker"
    android:src="@drawable/speaker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="invisible" />
  <TextView
    android:id="@+id/status"
    android:background="@drawable/dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textSize="20px"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:gravity="center"
    android:visibility="invisible" />
<!-- 
  <Button
    android:id="@+id/interrupt"
    android:text="@string/stopRecognizer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onInterruptPress"
    android:layout_alignParentBottom="true"
    android:enabled="false" />
  <Button
    android:id="@+id/recognize"
    android:text="@string/recognizeSpeech"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="onButtonPress"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@id/interrupt"
    android:enabled="false" />
-->
  <ProgressBar
    android:id="@+id/loadingIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" />
  <TextView
    android:id="@+id/loadingData"
    android:text="@string/loadingData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/loadingIcon"
    android:layout_centerHorizontal="true" />
</RelativeLayout>